{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./tools/js/audio",
    "rootDir": "./tools/js/audio",
    "sourceMap": false,
    "removeComments": false
  },
  "include": [
    "tools/js/audio/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
