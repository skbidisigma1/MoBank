{  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/[...slug]" },
    { "source": "/login", "destination": "/pages/login.html" },
    { "source": "/admin", "destination": "/pages/admin.html" },
    { "source": "/dashboard", "destination": "/pages/dashboard.html" },
    { "source": "/leaderboard", "destination": "/pages/leaderboard.html" },
    { "source": "/pin", "destination": "/pages/pin.html" },
    { "source": "/privacy", "destination": "/pages/privacy.html" },
    { "source": "/profile", "destination": "/pages/profile.html" },
    { "source": "/tos", "destination": "/pages/tos.html" },
    { "source": "/transfer", "destination": "/pages/transfer.html" },
    { "source": "/tools/metronome", "destination": "/tools/metronome.html" },
    { "source": "/credits", "destination": "/pages/credits.html" },
    { "source": "/webhook", "destination": "/api/webhook" },
    { "source": "/cute", "destination": "/pages/cute.html" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' https://cdn.jsdelivr.net https://fonts.googleapis.com https://dev-nqdfwemz14t8nf7w.us.auth0.com; style-src 'self' https://fonts.googleapis.com https://cdn.jsdelivr.net; font-src 'self' https://fonts.gstatic.com; img-src 'self' https://lh3.googleusercontent.com data:; media-src 'self' https://www.youtube.com https://player.vimeo.com; connect-src 'self' https://fonts.googleapis.com https://cdn.jsdelivr.net https://firestore.googleapis.com https://securetoken.googleapis.com https://dev-nqdfwemz14t8nf7w.us.auth0.com; frame-src https://www.youtube.com https://player.vimeo.com https://www.youtube-nocookie.com https://dev-nqdfwemz14t8nf7w.us.auth0.com; object-src 'none'; frame-ancestors 'none'; base-uri 'self';"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        },
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "off"
        },
        {
          "key": "X-Powered-By",
          "value": "none"
        },
        {
          "key": "X-Download-Options",
          "value": "noopen"
        },
        {
          "key": "Permissions-Policy",
          "value": "microphone=(self)"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://mo-classroom.us"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Expect-CT",
          "value": "max-age=86400, enforce, report-uri=\"https://your-report-uri.com\""
        }
      ]
    }
  ]
}
